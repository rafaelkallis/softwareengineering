<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:FormPanel ui:field="form" addStyleNames="form-horizontal">
	    <g:FlowPanel>
		    <g:FlowPanel addStyleNames="form-group">
		        <g:Label addStyleNames="col-sm-3 control-label">Aktuelles Passwort</g:Label>
		        <g:FlowPanel addStyleNames="col-sm-8">
	            	<g:PasswordTextBox addStyleNames="form-control" ui:field="oldPassword"></g:PasswordTextBox>
	            </g:FlowPanel>
		    </g:FlowPanel>
		    <g:FlowPanel addStyleNames="form-group">
		        <g:Label addStyleNames="col-sm-3 control-label">Neues Passwort</g:Label>
		        <g:FlowPanel addStyleNames="col-sm-8">
	            	<g:PasswordTextBox addStyleNames="form-control" ui:field="newPassword"></g:PasswordTextBox>
	            </g:FlowPanel>
		    </g:FlowPanel>
		    <g:FlowPanel addStyleNames="form-group">
		        <g:Label addStyleNames="col-sm-3 control-label">Bestätigung</g:Label>
		        <g:FlowPanel addStyleNames="col-sm-8">
	            	<g:PasswordTextBox addStyleNames="form-control" ui:field="passwordConfirmation"></g:PasswordTextBox>
	            </g:FlowPanel>
		    </g:FlowPanel>
		    <g:FlowPanel visible="false" ui:field="errorConfirmation" addStyleNames="alert alert-danger">
		        <g:HTML><p>Ihre neuen Passwörter stimmen leider nicht überein. Bitte korrigieren Sie die Eingabe.</p></g:HTML>
		    </g:FlowPanel>
		    <g:FlowPanel visible="false" ui:field="errorWrongCredentials" addStyleNames="alert alert-danger">
		        <g:HTML><p>Ihr aktuelles Passwort ist falsch. Bitte korrigieren Sie die Eingabe.</p></g:HTML>
		    </g:FlowPanel>
		    <g:FlowPanel visible="false" ui:field="success" addStyleNames="alert alert-success">
		        <g:HTML><p>Ihr Passwort wurde erfolgreich geändert.</p></g:HTML>
		    </g:FlowPanel>
		   	<g:FlowPanel addStyleNames="form-group">
		        <g:FlowPanel addStyleNames="col-sm-offset-3 col-sm-6">
	            	<g:SubmitButton addStyleNames="btn btn-primary" ui:field="submit">Passwort ändern</g:SubmitButton>
	            </g:FlowPanel>
		    </g:FlowPanel>
	    </g:FlowPanel>
    </g:FormPanel>
</ui:UiBinder> 