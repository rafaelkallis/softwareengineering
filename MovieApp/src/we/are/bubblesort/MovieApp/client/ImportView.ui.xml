<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:FormPanel ui:field="form" addStyleNames="form-horizontal">
	    <g:FlowPanel>
		    <g:FlowPanel addStyleNames="form-group">
		        <g:Label addStyleNames="col-sm-3 control-label">TSV-Datei</g:Label>
		        <g:FlowPanel addStyleNames="col-sm-8">
	            	<g:FileUpload addStyleNames="form-control" ui:field="file"></g:FileUpload>
	            	<g:Hidden ui:field="session" />
	            </g:FlowPanel>
		    </g:FlowPanel>
		    <g:FlowPanel visible="false" ui:field="errorUpload" addStyleNames="alert alert-danger">
		        <g:HTML><p>Ein technischer Fehler ist aufgetreten. Bitte versuchen Sie es erneut.</p></g:HTML>
		    </g:FlowPanel>
		    <g:FlowPanel visible="false" ui:field="errorNoFile" addStyleNames="alert alert-danger">
		        <g:HTML><p>Bitte w√§hlen Sie zuerst eine Datei aus.</p></g:HTML>
		    </g:FlowPanel>
		    <g:FlowPanel visible="false" ui:field="errorFormat" addStyleNames="alert alert-danger">
		        <g:HTML><p>Das hochgeladene Format kann leider nicht verarbeitet werden.</p></g:HTML>
		    </g:FlowPanel>
		    <g:FlowPanel visible="false" ui:field="success" addStyleNames="alert alert-success">
		        <g:HTML><p>Der Import war erfolgreich.</p></g:HTML>
		    </g:FlowPanel>
		   	<g:FlowPanel addStyleNames="form-group">
		        <g:FlowPanel addStyleNames="col-sm-offset-3 col-sm-8">
	            	<g:Button addStyleNames="btn btn-primary" ui:field="submit">Hochladen</g:Button>
	            </g:FlowPanel>
		    </g:FlowPanel>
	    </g:FlowPanel>
    </g:FormPanel>
</ui:UiBinder> 